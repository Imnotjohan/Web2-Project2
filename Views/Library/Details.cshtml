@model practica2.Models.Books

@{
    ViewData["Title"] = "Detalles del Libro";
}

<div class="container mt-5">
    <h1>@Model.book</h1>
    <hr />

    <div class="row">
        <div class="col-md-4">
            <img src="@Model.urlImage" class="img-fluid" alt="@Model.book">
        </div>
        <div class="col-md-8">
            <h4>Autor: @Model.author</h4>
            <p><strong>Género:</strong> @Model.gender</p>
            <p><strong>Año de publicación:</strong> @Model.publishDate</p>
            <p>@Model.description</p>
        </div>
    </div>
</div>